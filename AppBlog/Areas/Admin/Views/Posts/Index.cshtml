@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<AppBlog.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">


            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Quản lý Bài Viết</h4>
                        <p class="card-description">
                            <a style="text-decoration: none" asp-action="Create">Create New</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table ">
                                <thead>
                                    <tr>
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Danh Mục
                                        </th>
                                        <th>
                                            Published
                                        </th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string url = $"/{item.Alias}.html";
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PostId)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                                
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cat!.CatName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Published)
                                            </td>
                                            <td>


                                                <a style="text-decoration:none" asp-action="Details" asp-route-id="@item.PostId" class="badge badge-warning">Details</a>
                                                <a style="text-decoration:none" class="badge badge-success" asp-action="Edit" asp-route-id="@item.PostId">Edit</a>
                                                <a style="text-decoration:none" class="badge badge-danger" asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <pager class="pager-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4Full" asp-area="Admin" asp-controller="Posts" asp-action="Index" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

