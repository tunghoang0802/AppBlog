@model IEnumerable<AppBlog.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">


            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Quản lý quyền truy cập</h4>
                        <p class="card-description">
                            <a style="text-decoration: none" asp-action="Create">Create New</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table ">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RoleName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RoleDescription)
                                        </th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleDescription)
                                            </td>
                                            <td>
                                                <a style="text-decoration:none" class="badge badge-warning" asp-action="Details" asp-route-id="@item.RoleId">Details</a>
                                                <a style="text-decoration:none" class="badge badge-success" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
                                                <a style="text-decoration:none" class="badge badge-danger" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>