@model AppBlog.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Xác nhận xóa Danh mục</h4>

                        <form class="forms-sample" asp-area="Admin" asp-controller="Categories" asp-action="Delete">
                            <input type="hidden" asp-for="CatId" />
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="CatName">Cat Name</label>
                                        <br />
                                        @Html.DisplayFor(model => model.CatName)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Parents" class="form-control-lable">Parents: <span class="tx-danger">*</span></label>
                                        <br />
                                        @Html.DisplayFor(model => model.Parents)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">

                                        <label asp-for="Ordering" class="form-control-lable">Sắp xếp: <span class="tx-danger">*</span></label>
                                        <br />
                                        @Html.DisplayFor(model => model.Ordering)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">

                                        <label class="form-control-lable">Alias <span class="tx-danger">*</span></label>
                                        <br />
                                        @Html.DisplayFor(model => model.Alias)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="form-control-lable">Mô tả</label>
                                    <br />
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-lable">Ảnh đại diện: <span class="tx-danger">*</span></label>

                                        @if (!string.IsNullOrEmpty(Model.Thumb))
                                        {
                                            <img style="object-fit: cover" width="100" height="100" src="~/images/categories/@Model.Thumb" alt="@Model.CatName" />
                                        }

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-lable">Cover: <span class="tx-danger">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></label>
                                        @if (!string.IsNullOrEmpty(Model.Cover))
                                        {
                                            <img style="object-fit: cover" width="100" height="100" src="~/images/covers/@Model.Cover" alt="@Model.CatName" />
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-lable">Icon: <span class="tx-danger">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></label>
                                        @if (!string.IsNullOrEmpty(Model.Icon))
                                        {
                                            <img style="object-fit: cover" width="100" height="100" src="~/images/icons/@Model.Icon" alt="@Model.CatName" />
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Published" class="form-control-lable">Published: <span class="tx-danger">*</span></label>
                                        @Html.DisplayFor(model => model.Published)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Title" class="form-control-lable">Tiêu đề</label>
                                    <br />
                                    @Html.DisplayFor(model => model.Title)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="MetaKey" class="form-control-lable">MetaKey</label>
                                    <br />
                                    @Html.DisplayFor(model => model.MetaKey)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="MetaDesc" class="form-control-lable">MetaDesc</label>
                                    <br />
                                    @Html.DisplayFor(model => model.MetaDesc)
                                </div>
                            </div>
                            <div class="form-group">

                                <button type="submit" class="btn btn-danger me-2">Delete</button>
                                <button asp-action="Index" class="btn btn-light">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <!-- partial -->
</div>

