@model AppBlog.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tạo mới Danh mục</h4>

                        <form class="forms-sample" asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="CatName">Cat Name</label>
                                        <input type="text" class="form-control" asp-for="CatName" placeholder="Cat Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Parents" class="form-control-lable">Danh mục cha: <span class="tx-danger">*</span></label>
                                        <select class="form-control select2 " asp-for="Parents" asp-items="@ViewBag.DanhMucGoc" required>
                                            <option value="0" selected>Danh mục gốc</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Ordering" class="form-control-lable">Sắp xếp: <span class="tx-danger">*</span></label>
                                        <input type="number" class="form-control" value="1" asp-for="Ordering">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="form-control-lable">Mô tả</label>
                                    <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Thumb"  class="form-control-lable">Ảnh đại diện: <span class="tx-danger">*</span></label>
                                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for ="Cover" class="form-control-lable">Cover: <span class="tx-danger">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></label>
                                        <input name="fCover" type="file" class="form-control-file" asp-for="Cover">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Icon"  class="form-control-lable">Icon: <span class="tx-danger">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></label>
                                        <input name="fIcon" type="file" class="form-control-file" asp-for="Icon">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Published" class="form-control-lable">Published: <span class="tx-danger">*</span></label>
                                        <input type="checkbox" asp-for="Published"><span> Active</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Title" class="form-control-lable">Tiêu đề</label>
                                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="MetaKey" class="form-control-lable">MetaKey</label>
                                    <input type="text" class="form-control" asp-for="MetaKey" placeholder="MetaKey">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="MetaDesc" class="form-control-lable">MetaDesc</label>
                                    <input type="text" class="form-control" asp-for="MetaDesc" placeholder="MetaDesc">
                                </div>
                            </div>
                            <div class="form-group">
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button asp-action="Index" class="btn btn-light">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <!-- partial -->
</div>




